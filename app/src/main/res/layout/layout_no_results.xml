<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/no_results_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:visibility="gone">

    <com.gauravsaluja.redmart.customviews.TextViewNunitoRegularFont
        android:id="@+id/action_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_retry_button"
        android:paddingBottom="@dimen/value_16dp"
        android:paddingEnd="@dimen/value_24dp"
        android:paddingLeft="@dimen/value_24dp"
        android:paddingRight="@dimen/value_24dp"
        android:paddingStart="@dimen/value_24dp"
        android:paddingTop="@dimen/value_16dp"
        android:text="@string/retry"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gauravsaluja.redmart.customviews.TextViewNunitoLightFont
        android:id="@+id/retry_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/value_16dp"
        android:layout_marginLeft="@dimen/value_16dp"
        android:layout_marginRight="@dimen/value_16dp"
        android:layout_marginStart="@dimen/value_16dp"
        android:layout_marginTop="@dimen/value_12dp"
        android:gravity="center"
        android:text="@string/no_results"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_retry" />

</android.support.constraint.ConstraintLayout>